<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/bottomSheetContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lavender_web"
    android:padding="20dp">


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:autofillHints="Type here to add new task"
        android:fontFamily="@font/poppins_semibold"
        android:hint="@string/new_task"
        android:inputType="text"
        android:textColor="@color/gun_metal"
        android:textColorHint="@color/metallic_seaweed" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/metallic_seaweed"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/add"
        android:textColor="@color/white"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>